@model Practical_19.Models.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<hr />
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-warning">Update</button>
            <a asp-action="ListRoles" class="btn btn-secondary">Cancel</a>
        </div>
    </div>

    <div class="card mt-4 ">
        <div class="card-header bg-light">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                            <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                    <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer  bg-light">
            <div class="card-footer  bg-light">
                <a asp-controller="Administration" asp-action="EditUsersInRole"
                   asp-route-roleId="@Model.Id" class="btn btn-success">
                    Add or remove users from this role
                </a>
            </div>
             
        </div>
    </div>
</form>