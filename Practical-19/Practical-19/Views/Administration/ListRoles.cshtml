@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authenticationService
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{

    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
   asp-controller="administration">Add new role</a>

    <table class="table" id="userTable">
        <thead>
            <tr>

                <th>
                    Role Id
                </th>
                <th>
                    Role Name
                </th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="users">
            @foreach (var roles in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => roles.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => roles.Name)
                    </td>

                    <td>
                        <a asp-controller="Administration" asp-action="EditRole"
                   asp-route-id="@roles.Id" class="btn btn-warning">
                            Edit
                        </a>



                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>


            <a class="btn btn-primary" style="width:auto"
           asp-controller="administration" asp-action="CreateRole">
                Create Role
            </a>


        </div>
    </div>
}
